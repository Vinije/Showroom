@page "/"
@namespace Showroom.Pages

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf

@using Showroom.Client

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    var tokens = new TokenProvider
    {
        XsrfToken = Xsrf.GetAndStoreTokens(HttpContext).RequestToken
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Showroom</title>
    <base href="~/" />
    <link href="Showroom.Client.styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
</head>
<body >
    <app>
        <component type="typeof(App)" param-InitialState = "tokens" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="js/Carousel.js"></script>
    <script src="_framework/blazor.server.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/UnityLoader.js"></script>
    <script src="js/Updater.js"></script>
    <script src="_content/BlazorStrap/blazorStrap.js"></script>
</body>
</html>
